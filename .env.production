# Enterprise Property Escrow Platform - Production Environment Configuration

# Network Configuration
HARDHAT_NETWORK=polygon
POLYGON_RPC_URL=https://polygon-rpc.com/
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com/

# Deployment Keys (Set these in your secure environment)
PRIVATE_KEY=your_deployer_private_key_here
MAINNET_DEPLOYMENT_CONFIRMED=YES_I_UNDERSTAND_RISKS

# Contract Configuration - Mainnet
MAINNET_PLATFORM_WALLET=0x0000000000000000000000000000000000000000
MAINNET_DEFAULT_AGENT=0x0000000000000000000000000000000000000000
MAINNET_DEFAULT_ARBITER=0x0000000000000000000000000000000000000000

# Contract Configuration - Testnet
TESTNET_PLATFORM_WALLET=0x0000000000000000000000000000000000000000
TESTNET_DEFAULT_AGENT=0x0000000000000000000000000000000000000000
TESTNET_DEFAULT_ARBITER=0x0000000000000000000000000000000000000000

# Verification
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

# Monitoring & Alerts
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
ALERT_EMAIL=admin@yourcompany.com
MONITORING_WEBHOOK=your_monitoring_webhook_here

# Gas & Performance
REPORT_GAS=true
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Security
ENABLE_SECURITY_CHECKS=true
AUDIT_MODE=production