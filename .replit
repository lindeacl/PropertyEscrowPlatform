modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Hardhat Development Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "escrow_test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Escrow Platform Tests"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Escrow Tests"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Local Blockchain"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "CLI Demo"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend Development Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "UI Test Suite"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Smart Contract Tests"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Deploy Contracts"

[[workflows.workflow]]
name = "Hardhat Development Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install && npm run test && npm run deploy:localhost"

[[workflows.workflow]]
name = "escrow_test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install && npm test"

[[workflows.workflow]]
name = "Escrow Platform Tests"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx hardhat test"

[[workflows.workflow]]
name = "Run Escrow Tests"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx hardhat test"

[[workflows.workflow]]
name = "Local Blockchain"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx hardhat node"
waitForPort = 8545

[[workflows.workflow]]
name = "CLI Demo"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node cli-demo.js"

[[workflows.workflow]]
name = "Frontend Development Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm start"
waitForPort = 5000

[[workflows.workflow]]
name = "UI Test Suite"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run test:coverage"

[[workflows.workflow]]
name = "Smart Contract Tests"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx hardhat test"

[[workflows.workflow]]
name = "Deploy Contracts"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx hardhat run scripts/deploy.js --network localhost"

[deployment]
run = ["sh", "-c", "npm install && npm run test && npm run deploy:localhost"]

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8545
externalPort = 80
